{
  "name": "pure-js",
  "type": "module",
  "scripts": {
    "start": "bun run --bun server/index.js",
    "dev": "concurrently --kill-others 'bun run build:css --watch' 'bun run start'",
    "build:css": "tailwindcss -i ./tailwind.css -o ./static/style.css",
    "build:css:prod": "bun run build:css --minify"
  },
  "dependencies": {
    "hono": "latest"
  },
  "devDependencies": {
    "concurrently": "latest",
    "tailwindcss": "latest"
  }
}
